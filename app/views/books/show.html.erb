  <% if @book.errors.any? %>
   <%= @book.errors.count %> error.
  <div class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book_new,user: @book.user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
          <table class="table table-striped">
            <tbody>
            <td>
              <%= link_to user_path(@book.user) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %><br><%= @book.user.name %>
              <% end %>
              </td>
            <td><%= link_to @book.title,book_path(@book.id) %></td>
            <td><%= @book.body %> </td>
              <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
              <% end %>
              <% if @book.user == current_user %>
                <td><%= link_to "Destroy", @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %></td>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>